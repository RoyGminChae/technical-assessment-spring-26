generator client {
  // *IMPORTANT* REMEMBER TO ADD -js
  // this makes it so that client is created inside @prisma/client
  // instead of the folder below
  provider = "prisma-client-js"  
  // output   = "../src/generated/prisma" 
}

datasource db {
  provider = "postgresql"
}

model Quiz {
    id          Int         @id @default(autoincrement())  
    name        String
    pageName    String
    number      Int 
    correct     Boolean
    }

model Comment {
    id          Int         @id @default(autoincrement())
    name        String  
    content     String
    pageName    String
    createdAt   DateTime    @default(now())
}